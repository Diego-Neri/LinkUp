@model IEnumerable<ControleDeContatos.Models.Arquivos>

@{
    ViewData["Title"] = "Arquivos Apresentações - Cliente";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">@ViewData["Title"]</h2>

    <form action="/Arquivos/UploadImagem" enctype="multipart/form-data" method="post" class="mb-4">
        <div class="input-group">
            <input type="file" name="arquivos" multiple class="form-control" />
            <button type="submit" class="btn btn-primary">Enviar Imagem</button>
        </div>
    </form>

    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead class="table-light">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Descricao) <!-- Usar First() para pegar a propriedade correta -->
                    </th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any()) // Verifica se Model não é nulo e contém elementos
                {
                    foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descricao)
                            </td>
                            <td>
                                <a asp-action="Visualizar" asp-route-id="@item.Id" target="_blank" class="btn btn-info btn-sm">Visualizar</a>
                            </td>
                        </tr>
                    }
                } else {
                    <tr>
                        <td colspan="2" class="text-center">Nenhuma imagem encontrada.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
