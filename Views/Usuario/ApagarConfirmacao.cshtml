@model UsuarioSemSenhaModel
@{
    ViewData["Title"] = "Confirmação apagar o usuário";
}

<div class="text-center">
    <h3>Deseja realmente apagar o usuário (@Model.Nome)?</h3>
</div>

<div class="text-center">
    <a class="btn btn-primary btn-lg btn-block" role="button" asp-action="Index" asp-controller="Usuario">Cancelar exclusão</a>
    <a class="btn btn-danger btn-lg btn-block" role="button" asp-action="Apagar" asp-controller="Usuario" asp-route-id="@Model.Id">Confirmar exclusão</a>
</div>